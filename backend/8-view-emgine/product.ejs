<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title%></title>
    <!-- Import css, js links -->
    <%- include('partials/links')%>
  </head>

  <body class="<%= dark==true? 'dark': 'light'%>">
    <div class="container">
      <!-- navbar starts -->
      <%- include('partials/navbar')%>
      <!-- navbar end -->
      <h1><%= title%></h1>
      <%= content%> 
    
    <div class="row">
      <% for(var i=0; i < data.length; i++) { %>
        <div class="col-md-4">
            <h2><%= data[i].brand %></h2>
            <ul>
                <li>Brand: <%= data[i].brand %> </li>
                <li>Model: <%= data[i].model %></li>
                <li>Power: <%= data[i].power %></li>
                <li>Gear:  <%= data[i].gear %></li>
                <li>Fuel:  <%= data[i].fuel %></li>
                <li>prise: <%= data[i].prise %></li>
                <li>Doors: <%= data[i].doors %></li>
                <a href="/products/<%= data[i].id %>">Read more</a>
            </ul>
        </div>
      <% } %>
        <!-- example for each one product -->
        <div class="col-md-4">
            <h2>Product name</h2>
            <ul>
                <li>Brand: Brand</li>
                <li>Model: Model</li>
                <li>Power: power</li>
                <li>Gear: Gear</li>
                <li>Fuel: fuel</li>
                <li>prise: prise</li>
                <li>Doors: doors</li>
                <a href="">Read more</a>
            </ul>
        </div>
    </div>
</div>
    <script>
      // alert('<%= title%>')
    </script>
  </body>
</html>
